@model StackOverflow.Models.QuestionCategories

@{
    ViewBag.Title = "New Question";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h2 class="col-md-10">What is your question?</h2>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Question.QuestionName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Question.QuestionName, "", new { @class = "text-danger" })
                <br />
            </div>
        </div>
        <div class="form-group col-md-10">
            Language: <br />
            @Html.DropDownListFor(x => x.Question.Category.Id, new SelectList(Model.Categories, "Id", "Name"))
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Questions", "Home")
</div>
